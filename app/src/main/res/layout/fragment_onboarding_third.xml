<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="20dp"
    android:paddingBottom="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ellipse_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toStartOf="@id/ellipse_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ellipse_unchecked" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ellipse_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@id/ellipse_3"
        app:layout_constraintStart_toEndOf="@id/ellipse_1"
        app:layout_constraintTop_toTopOf="@id/ellipse_1"
        app:srcCompat="@drawable/ellipse_unchecked" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ellipse_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ellipse_2"
        app:layout_constraintTop_toTopOf="@id/ellipse_1"
        app:srcCompat="@drawable/ellipse_checked" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_onboarding_3"
        style="@style/AppOnboardingText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/onboarding_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ellipse_1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_onboarding_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_onboarding_3"
        app:srcCompat="@drawable/illustration_onboarding_3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/btn_onboarding_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_onboarding_3"
        style="@style/AppDefaultButtonText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_default_button"
        android:paddingVertical="16dp"
        android:text="@string/onboarding_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>