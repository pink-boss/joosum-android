<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppToolbarText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppHomeToolbarText" parent="AppToolbarText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppFolderInfoToolbarText" parent="AppToolbarText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppOnboardingText">
        <item name="android:textColor">@color/primary_600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="AppDefaultButtonText">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>